generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  fullname  String
  phone     String
  role      Role      @default(User)
  bookings  Booking[]
  courts    Court[]
   notifications Notification[]
}

model Court {
  id             Int       @id @default(autoincrement())
  name           String
  description    String?
  price_per_hour Float
  location       String?
  status         Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  ownerId        Int

  timezone         String  @default("Asia/Ho_Chi_Minh")
  defaultOpenTime  String  @default("05:00") 
  defaultCloseTime String  @default("23:59")

  bookings       Booking[]
  businessHours  CourtBusinessHour[] 
  owner          User      @relation(fields: [ownerId], references: [id])
}

model CourtBusinessHour {
  id        Int     @id @default(autoincrement())
  courtId   Int
  dayOfWeek Int    
  isClosed  Boolean @default(false)

  openTime  String?
  closeTime String? 

  court     Court   @relation(fields: [courtId], references: [id])

  @@unique([courtId, dayOfWeek])
  @@index([courtId])
}

model Booking {
  id         Int           @id @default(autoincrement())
  userId     Int
  courtId    Int
  startTime  DateTime
  endTime    DateTime
  totalPrice Float
  notes      String?
  createdAt  DateTime      @default(now())
  type       BookingType   @default(Casual)
  status     BookingStatus @default(Pending)
  court      Court         @relation(fields: [courtId], references: [id])
  user       User          @relation(fields: [userId], references: [id])
}

enum Role {
  User
  Admin
  Master
}

enum BookingStatus {
  Pending
  Confirmed
  Cancelled
}

enum BookingType {
  Casual
  Monthly
  Event
}
enum NotificationType {
  BookingCreated
  BookingCancelled
  BookingConfirmed
}
model Notification {
  id          Int              @id @default(autoincrement())
  recipientId Int             
  type        NotificationType
  title       String
  message     String

  bookingId   Int?
  courtId     Int?

  isRead      Boolean          @default(false)
  createdAt   DateTime         @default(now())
  readAt      DateTime?

  recipient   User             @relation(fields: [recipientId], references: [id])

  @@index([recipientId, isRead, createdAt])
  @@index([bookingId])
  @@index([courtId])
}
